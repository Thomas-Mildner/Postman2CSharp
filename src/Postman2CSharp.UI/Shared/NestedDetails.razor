@using Postman2CSharp.Core.Models.PostmanCollection.Http

@if (NestedValues != null)
{
    <p style="@($"font-size:{FontSizeStr()}")">@Key:</p>
    foreach (var nestedValue in NestedValues)
    {
        <div class="f-row" style="@($"font-size:{FontSizeStr()}")" >
            <p>&emsp; @nestedValue.Key: <b>@nestedValue.Value</b></p>
        </div>
    }
}

@code {
    [EditorRequired, Parameter]
    public string? Key { get; set; }

    [EditorRequired, Parameter]
    public Dictionary<string,string>? NestedValues { get; set; }

    [EditorRequired, Parameter]
    public FontSize FontSize { get; set; }

    private string FontSizeStr()
    {
        return FontSize switch
        {
            FontSize.XXSmall => "xx-small",
            FontSize.XSmall => "x-small",
            FontSize.Smaller => "smaller",
            FontSize.Small => "small",
            FontSize.Medium => "medium",
            FontSize.Large => "large",
            FontSize.Larger => "larger",
            FontSize.XLarge => "x-large",
            FontSize.XXLarge => "xx-large",
            _ => throw new ArgumentOutOfRangeException()
        };
    }
}

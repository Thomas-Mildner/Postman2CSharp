@page "/"
@page "/GettingStarted"
@inject IWebAssemblyHostEnvironment HostEnv
@inherits MainLayoutComponent
<PageHeader 
    Keywords="@Keywords"
            Description="Generate C# ApiClient service that uses HttpClient from your Postman collection. Postman to C#."
    NotPrerenderingTitle="@NotPrerenderingTitle"
    AddPostman2CSharpToTitle="false" Title="Convert Postman Collection To C# ApiClient Free"></PageHeader>

<BreadCrumbs Items="@BreadCrumbs"></BreadCrumbs>

<br />

<GettingStarted />

@code 
{
    private string NotPrerenderingTitle => Navigate.Value.BaseUrl == Navigate.Value.CurrentUrl ? "Home" : "Getting Started";
    private string Keywords => "openapi, open api, swagger, convert, graphql, curl, raml, har";

    private static readonly List<BreadcrumbItem> BreadCrumbs = [ new("Home", "/", true, Icons.Rocket) ];

    protected override Task OnInitializedAsync()
    {
        return TabsService.Value.SetHome(null);
    }
}

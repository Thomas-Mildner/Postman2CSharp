@page "/"
@page "/GettingStarted"
@inject IWebAssemblyHostEnvironment HostEnv
@inherits MainLayoutComponent
<PageHeader 
    Keywords="@Keywords" 
    Description="Securely convert Postman collections to C# ApiClients. Free, online, all in the browser, and in just a few clicks. Generate code is highly configurable."
    NotPrerenderingTitle="@NotPrerenderingTitle"
    AddPostman2CSharpToTitle="false" Title="Convert Postman Collections To C# ApiClients - Free Online Tool"></PageHeader>

<BreadCrumbs Items="@BreadCrumbs"></BreadCrumbs>

<br />

<GettingStarted />

@code 
{
    private string NotPrerenderingTitle => Navigate.Value.BaseUrl == Navigate.Value.CurrentUrl ? "Home" : "Getting Started";
    private string Keywords => "openapi, open api, swagger, convert, graphql, curl, raml, har";

    private static readonly List<BreadcrumbItem> BreadCrumbs = new()
    {
        new("Home", "/", true, Icons.Rocket),
    };

    protected override void OnInitialized()
    {
        TabsService.Value.SetHome(null);
    }
}

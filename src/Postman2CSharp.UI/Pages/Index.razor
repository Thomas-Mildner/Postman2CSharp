@page "/"
@page "/GettingStarted"
@inject IWebAssemblyHostEnvironment HostEnv
@inherits MainLayoutComponent
<PageHeader 
    Keywords="@Keywords" 
    Description="Securely convert Postman Collections into fully featured C# ApiClients for free online, all in the browser in just a few clicks.
Generated ApiClients come working right out of the box and contain no third party dependencies (unless you choose to add them).
OpenAPI, GraphQL, cURL, RAML, HAR and other specifications can be also converted by first importing into Postman."
    NotPrerenderingTitle="@NotPrerenderingTitle"
    AddPostman2CSharpToTitle
             Title="Convert Postman Collections Into C# ApiClients" ></PageHeader>

<BreadCrumbs Items="@BreadCrumbs"></BreadCrumbs>

<br />

<GettingStarted />

@code 
{
    private string NotPrerenderingTitle => Navigate.Value.BaseUrl == Navigate.Value.CurrentUrl ? "Home" : "Getting Started";
    private string Keywords => "openapi, open api, swagger, convert, graphql, curl, raml, har";

    private static readonly List<BreadcrumbItem> BreadCrumbs = new()
    {
        new("Home", "/", true, Icons.Rocket),
    };

    protected override void OnInitialized()
    {
        TabsService.Value.SetHome(null);
    }
}

@code {
    private static PostmanCollection ExampleCollection { get; set; }

    public static RenderFragment Fragment(ApiClientGeneratorOptions options)
    {
        var apiClientGenerator = new ApiClientGenerator(ExampleCollection, options);
        var generateTask = apiClientGenerator.GenerateApiClients();
        generateTask.Wait();
        var apiClient = generateTask.Result.First();
        return @<PrismCodeBlock FileName="@apiClient.Name" Language="PrismLanguage.CSharp" Value="@apiClient.SourceCode" />;
    }
}

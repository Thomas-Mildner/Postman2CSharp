            Title="@Title" AddPostman2CSharpToTitle="false" ></PageHeader>

<MudPaper Class="header-paper">
    <MudText Typo="Typo.h1" Class="mt-4">Json2CSharp+: CSharp Class Generator</MudText>
    <MudText Typo="Typo.h2" Class="mt-4">Ultimate Control Over Class Generation</MudText>
    <br />
    <MudText Typo="Typo.body1" Class="mt-4">This was built on top of library used by json2csharp.com. Much thanks to the creator of that tool.</MudText>
    <br/>

    <MudText>
        <strong>Privacy Assurance:</strong> Your Json never leave your computer. This tool operates with Blazor WebAssembly (Wasm),
        a framework that allows it to run entirely in your browser without making any network calls or sharing information about your Json.
        Your data stays on your machine.
    </MudText>
</MudPaper>

@code {
    private static readonly string Title = "Json2CSharp+: The Ultimate C# Class Generation Tool";
    private static readonly string Keywords = "json2csharp, json to csharp, convert json into C# classes, dedupe json, json2csharp plus, json2csharp+";
